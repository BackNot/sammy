<div class="modal fade" id="addGroupModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    {{ 'application.group.add_title'|trans({},'application') }}
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(addGroupForm, {'action': url('app_group_add')}) }}
                {{ form_widget(addGroupForm) }}
                <button class="btn btn-primary btn-sm"><i class="far fa-save"></i>&nbsp; {{ button_label|default('application.group.save_button'|trans({}, 'application')) }}</button>
                {{ form_end(addGroupForm) }}
            </div>
        </div>
    </div>
</div>