{% extends 'application/base.html.twig' %}

{% block title %}{{ 'application.general.change_password_title'|trans({}, 'application') }}{% endblock %}

{% block body %}
    <div class="row  mt-5">
        <div class="card offset-md-3 col-md-6">
            <div class="card-header header-elements-inline">
                <h4>
                    <i class="fa fa-passport"></i> {{ 'application.general.change_password_title'|trans ({}, 'application') }}
                </h4>
            </div>
            <div class="card-body py-0">
                {{ 'application.general.password_requirements'|trans ({}, 'application') }}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        {{ 'application.general.save_button'|trans({}, 'application') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
