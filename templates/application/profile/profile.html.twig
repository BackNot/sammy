{% extends 'application/base.html.twig' %}

{% block title %}{{ 'application.general.my_profile_title'|trans ({}, 'application') }}{% endblock %}

{% block body %}
    <div class="offset-md-3 col-md-6">
        <div class="main-card card">
            <div class="card-header">
                <div class="media flex-wrap w-100 align-items-center">
                    <div class="media-body">
                        <i class="dropdown-icon fa fa-id-card"></i> {{ 'application.general.my_profile_title'|trans ({}, 'application') }}
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            {{ 'application.general.save_button'|trans ({}, 'application') }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
