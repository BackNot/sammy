<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    {{ 'application.user.add_title'|trans({},'application') }}
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3"><i>{{ 'application.user.add_title_text'|trans({}, 'application') }}</i></div>
                {{ form_start(addUserForm, {'action': url('app_user_add')}) }}
                {{ form_row(addUserForm.name) }}
                {{ form_row(addUserForm.surname) }}
                {{ form_row(addUserForm.email) }}
                {{ form_row(addUserForm.roles) }}
                <div class="form-group row">
                    {{ form_label(addUserForm.groups) }}
                    <div class="col-sm-9 mt-1">
                        <input type="checkbox" id="all-project-groups" class="checkbox-all">
                        <label class="form-check-label" for="all-project-groups">{{ button_label|default('application.general.select_all'|trans({},'application')) }}</label>
                        <hr class="mt-1 mb-2">
                        {{ form_widget(addUserForm.groups) }}
                    </div>
                </div>
                <button class="btn btn-primary btn-sm"><i class="far fa-save"></i>&nbsp; {{ button_label|default('application.user.save_button'|trans) }}</button>
                {{ form_end(addUserForm) }}

            </div>
        </div>
    </div>
</div>